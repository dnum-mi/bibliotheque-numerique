{
  "name": "biblio-num",
  "version": "2.17.1",
  "description": "Projet Bibliothèque numérique",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build --env-mode=loose",
    "build:client": "turbo build --filter=@biblio-num/client --env-mode=loose",
    "build:rnf-client": "turbo build --filter=@biblio-num/rnf-client --env-mode=loose",
    "build:rnf-server": "turbo build --filter=@biblio-num/rnf-server --env-mode=loose",
    "build:server": "turbo build --filter=@biblio-num/server --env-mode=loose",
    "build:shared": "turbo build --filter=@biblio-num/shared --env-mode=loose",
    "clean:dist": "turbo clean:dist",
    "commitlint": "commitlint --edit",
    "dev": "FORCE_COLOR=1 turbo dev --filter @biblio-num/client --filter @biblio-num/server",
    "dev:all": "turbo dev",
    "dev:client": "turbo dev --filter=@biblio-num/client",
    "dev:rnf": "turbo dev --filter=@biblio-num/rnf-client --filter=@biblio-num/rnf-server",
    "dev:rnf-client": "turbo dev --filter=@biblio-num/rnf-client",
    "dev:rnf-server": "turbo dev --filter=@biblio-num/rnf-server",
    "dev:rnf-server-in-docker": "turbo dev:in-docker --filter=@biblio-num/rnf-server",
    "dev:server": "turbo dev --filter=@biblio-num/server",
    "dev:dws": "turbo dws",
    "dev:dwf": "turbo dwf",
    "dev:server-in-docker": "turbo dev:in-docker --filter=@biblio-num/server",
    "dev:worker-in-docker": "turbo dev:worker-in-docker --filter=@biblio-num/server",
    "docker:build:client": "docker build -t bn-client:latest --target production -f apps/client/Dockerfile .",
    "docker:build:client:check": "sh ci/scripts/check_http.sh 8080",
    "docker:build:client:run": "docker run -d -p 0.0.0.0:8080:8080 --name bn-client -e AG_GRID_LICENSE_KEY=myAgGridKye bn-client:latest",
    "docker:build:client:stop": "docker stop bn-client",
    "docker:build:http-proxy": "docker build -t rnf-http-proxy:latest -f apps/http-proxy/Dockerfile .",
    "docker:build:http-proxy:check": "sh ci/scripts/check_http.sh 8088",
    "docker:build:http-proxy:run": "docker run -d -p 0.0.0.0:8088:8080 --name rnf-http-proxy --network biblio-num-network --env-file apps/http-proxy/.env-rnf.local rnf-http-proxy:latest",
    "docker:build:http-proxy:stop": "docker stop rnf-http-proxy",
    "docker:build:rnf-client": "docker build -t rnf-client:latest --target production -f apps/rnf-client/Dockerfile .",
    "docker:build:rnf-client:check": "sh ci/scripts/check_http.sh 8081",
    "docker:build:rnf-client:run": "docker run -d -p 0.0.0.0:8081:8080 --name rnf-client  rnf-client:latest",
    "docker:build:rnf-client:stop": "docker stop rnf-client",
    "docker:build:rnf-server": "docker build -t rnf-server:latest --target production -f apps/rnf-server/Dockerfile .",
    "docker:build:rnf-server:check": "sh ci/scripts/check_http.sh 3001 api/health",
    "docker:build:rnf-server:run": "docker run -d -p 0.0.0.0:3001:3001 --name rnf-server --network biblio-num-network --env-file ./docker/.env-rnf.local rnf-server:latest",
    "docker:build:rnf-server:stop": "docker stop rnf-server",
    "docker:build:server": "docker build -t bn-server:latest --target production -f apps/server/Dockerfile .",
    "docker:build:server:check": "sh ci/scripts/check_http.sh 3000 health",
    "docker:build:server:run": "docker run -d -p 0.0.0.0:3000:3000 --name bn-server --network biblio-num-network --env-file ./docker/.env-bn.local bn-server:latest",
    "docker:build:server:stop": "docker stop bn-server",
    "docker:ci:up": "docker compose --profile ci -f apps/server/docker-compose.yml up -d",
    "docker:db:up": "docker compose --profile db-only -f apps/server/docker-compose.yml up -d",
    "docker:s3:up": "docker compose --profile s3-only -f apps/server/docker-compose.yml up -d",
    "docker:simple-dev": "docker compose --profile simple-dev -f apps/server/docker-compose.yml up -d",
    "docker:dev": "docker compose --profile dev -f apps/server/docker-compose.yml up -d",
    "docker:down": "docker compose -f apps/server/docker-compose.yml down",
    "docker:elk": "docker compose -f apps/elk/docker-compose.yml up -d",
    "docker:adminer": "docker compose --profile adminer -f apps/server/docker-compose.yml up -d",
    "docker:pgadmin": "docker compose --profile pgadmin -f apps/server/docker-compose.yml up -d",
    "generate-rnf": "turbo generate-code --filter=@biblio-num/rnf-server",
    "migration:run": "turbo migration:run --filter=@biblio-num/server",
    "rnf-migration:run": "turbo migration:run --filter=@biblio-num/rnf-server",
    "lint": "turbo lint",
    "lint:client": "turbo lint --filter=@biblio-num/client",
    "lint:rnf-client": "turbo lint --filter=@biblio-num/rnf-client",
    "lint:rnf-server": "turbo lint --filter=@biblio-num/rnf-server",
    "lint:server": "turbo lint --filter=@biblio-num/server",
    "prepare": "$CI || husky install",
    "start:rnf-server": "turbo start:prod --no-cache --filter=@biblio-num/rnf-server --env-mode=loose",
    "start:server": "turbo start:prod --no-cache --filter=@biblio-num/server --env-mode=loose",
    "start:worker-file": "turbo start:worker-file:prod --no-cache --filter=@biblio-num/server --env-mode=loose",
    "start:worker-sync": "turbo start:worker-sync:prod --no-cache --filter=@biblio-num/server --env-mode=loose",
    "test": "NODE_ENV='test' run-s docker:db:up test:only",
    "test:ci": "NODE_ENV='test' run-s docker:db:up test:only docker:down",
    "test:client": "turbo test --filter=@biblio-num/client",
    "test:e2e": "NODE_ENV='test' turbo test:e2e --filter=@biblio-num/client",
    "test:e2e:ci": "NODE_ENV='test' turbo test:e2e:ci",
    "test:only": "NODE_ENV='test' turbo test",
    "test:rnf-client": "turbo test --filter=@biblio-num/rnf-client",
    "test:rnf-server": "turbo test --filter=@biblio-num/rnf-server",
    "test:server": "turbo test --filter=@biblio-num/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnum-mi/bibliotheque_numerique.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dnum-mi/bibliotheque_numerique/issues"
  },
  "homepage": "https://github.com/dnum-mi/bibliotheque_numerique#readme",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "husky": "8.0.3"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "turbo": "2.0.11"
  },
  "volta": {
    "node": "20.11.0"
  },
  "main": "index.js",
  "keywords": [],
  "pnpm": {
    "overrides": {
      "vite@=4.5.0": ">=4.5.1",
      "vite@>=4.0.0 <=4.5.1": ">=4.5.2",
      "nodemailer@<=6.9.8": ">=6.9.9",
      "express@<4.19.2": ">=4.19.2",
      "vite@>=4.0.0 <=4.5.2": ">=4.5.3",
      "tar@<6.2.1": ">=6.2.1",
      "formidable@<3.2.4": ">=3.2.4"
    },
    "patchedDependencies": {
      "typeorm-fixtures-cli@3.1.0": "patches/typeorm-fixtures-cli@3.1.0.patch"
    }
  },
  "packageManager": "pnpm@8.12.1"
}
