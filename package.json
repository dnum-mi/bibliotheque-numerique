{
  "name": "biblio-num",
  "version": "1.1.9",
  "description": "Projet Bibliothèque numérique",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean:dist": "turbo clean:dist",
    "dev": "turbo dev",
    "dev:server": "turbo dev --filter=server",
    "start:server": "turbo start:prod --no-cache --filter=server",
    "start:worker": "turbo start:worker:prod --no-cache --filter=server",
    "dev:server-in-docker": "turbo dev:in-docker --filter=server",
    "dev:worker-in-docker": "turbo dev:worker-in-docker --filter=server",
    "dev:client": "turbo dev --filter=client",
    "test": "TEST_CMD=\"$( [ \"$CI\" ] && echo 'test:ci' || echo 'test:only' )\"; run-s $TEST_CMD",
    "test:ci": "run-s docker:db:up test:only docker:db:down",
    "test:only": "turbo test",
    "test:e2e": "turbo test:e2e --filter=client",
    "test:e2e:ci": "turbo test:e2e:ci",
    "prepare": "$CI || husky install",
    "lint": "turbo lint",
    "docker:db:up": "docker compose --profile db-only -f apps/server/docker-compose.dev.yml up -d",
    "docker:db:down": "docker compose --profile db-only -f apps/server/docker-compose.dev.yml down",
    "docker:adminer": "docker compose --profile adminer -f apps/server/docker-compose.dev.yml up -d",
    "docker:pgadmin": "docker compose --profile pgadmin -f apps/server/docker-compose.dev.yml up -d",
    "build:client": "turbo build --filter=client",
    "lint:client": "turbo lint --filter=client",
    "test:client": "turbo test --filter=client",
    "build:server": "turbo build --filter=server",
    "lint:server": "turbo lint --filter=server",
    "test:server": "turbo test --filter=server",
    "docker:dev": "docker compose --profile dev -f apps/server/docker-compose.dev.yml up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnum-mi/bibliotheque_numerique.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dnum-mi/bibliotheque_numerique/issues"
  },
  "homepage": "https://github.com/dnum-mi/bibliotheque_numerique#readme",
  "devDependencies": {
    "husky": "8.0.2"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "turbo": "1.9.5"
  },
  "volta": {
    "node": "18.16.0"
  }
}
