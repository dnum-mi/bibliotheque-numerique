{
  "name": "@biblio-num/rnf-server",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:staged": "eslint ",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "prisma migrate deploy; node dist/main",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "test/e2e/launch-e2e-test.sh",
    "test:e2e:dev": "test/e2e/launch-e2e-test.sh dev",
    "test:unit": "test/unit/launch-unit-test.sh",
    "test:unit:dev": "test/unit/launch-unit-test.sh dev",
    "test:watch": "jest --watch",
    "generate-code": "prisma generate",
    "dev:server": "nest start --debug 0.0.0.0:9229 --watch",
    "dev:in-docker": "run-s dev:server",
    "test:e2e:one":"dotenv -e ./test/.env.test jest -- --config ./test/e2e/jest-e2e.json"
  },
  "dependencies": {
    "@dnum-mi/ds-api-client": "^1.6.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^2.3.3",
    "@nestjs/core": "^9.4.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^10.0.0-beta.0",
    "@prisma/client": "4.15.0",
    "axios": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv": "^16.1.4",
    "dotenv-cli": "7.2.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "prisma": "4.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
