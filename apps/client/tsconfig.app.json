{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["@nestjs/websockets/socket-module"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "lib": ["ES2020", "DOM"]
  }
}
