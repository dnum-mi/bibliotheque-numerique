input {
  file {
    type => "bn-client"
    path => "/home/bn/client-*.log"
    start_position => "beginning"
    sincedb_path => "/dev/null"
  }
}

filter {
    json {
        source => "message"
    }
    date {
        match => ["timestamp", "ISO8601"]
        target => "@timestamp"
    }
}

output {
  if [type] == "bn-client" {
    elasticsearch {
      hosts => ["elasticsearch:9200"]
      index => "logstash-bn-client-%{+YYYY.MM.dd}"
    }
  }
  stdout {
    codec => rubydebug
  }
}
