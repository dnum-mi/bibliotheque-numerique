input {
  file {
    path => "/home/bn-api/*.log"
    start_position => "beginning"
    sincedb_path => "/dev/null"
  }
}

filter {
    json {
        source => "message"
    }
    date {
        match => ["timestamp", "ISO8601"]
        target => "@timestamp"
    }
}

output {
  elasticsearch {
    hosts => ["elasticsearch:9200"]
    index => "logstash-bn-api-%{+YYYY.MM.dd}"
  }
  stdout {
    codec => rubydebug
  }
}
