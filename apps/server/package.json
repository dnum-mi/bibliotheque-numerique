{
  "name": "@biblio-num/server",
  "version": "2.20.1",
  "description": "Bibliothèque Numérique Server API",
  "author": "minint",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "nest build",
    "clean:dist": "rimraf dist",
    "dev": "run-s dev:docker dev:server",
    "dev:docker": "docker compose --profile simple-dev -f docker-compose.yml up -d",
    "dev:docker:stop": "docker compose --profile simple-dev -f docker-compose.yml stop",
    "dev:in-docker": "run-s dev:server",
    "dev:server": "nest start --entryFile src/apps/api/main.js --debug 0.0.0.0:9229 --watch",
    "dev:worker-file": "nest start --entryFile src/apps/worker-file/main.js --debug 0.0.0.0:9231 --watch",
    "dev:worker-file-in-docker": "run-s dev:worker-file",
    "dev:worker-sync": "nest start --entryFile src/apps/worker-sync/main.js --debug 0.0.0.0:9230 --watch",
    "dev:worker-sync-in-docker": "run-s dev:worker-sync",
    "docker:build": "docker compose -f docker-compose.yml -f docker-compose.yml build server",
    "docker:ci:up": "docker compose --profile ci -f docker-compose.yml up -d",
    "docker:db:up": "docker compose --profile db-only -f docker-compose.yml up -d",
    "docker:dev": "docker compose --profile dev -f docker-compose.yml up -d",
    "docker:down": "docker compose -f apps/server/docker-compose.yml down",
    "docker:logs": "docker logs -f biblio-num_server",
    "docker:logs:db": "docker logs -f biblio-num_db",
    "docker:smtp:run": "docker compose -f docker-compose.yml -f docker-compose.yml up mailhog -d",
    "docker:start": "docker compose -f docker-compose.yml up",
    "docker:stop": "docker compose -f docker-compose.yml -f docker-compose.yml down",
    "ds": "run-s dev",
    "dwf": "run-s dev:worker-file",
    "dws": "run-s dev:worker-sync",
    "fixtures": "fixtures-ts-node-commonjs load test/e2e/fixtures --require=tsconfig-paths/register --dataSource=./test/e2e/data-source-e2e.typeorm.ts --sync",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path ../../.gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore",
    "lint:staged": "eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path ../../.gitignore",
    "migration:generate": "NODE_OPTIONS=\"-r tsconfig-paths/register\" npm run typeorm migration:generate",
    "migration:revert": "NODE_OPTIONS=\"-r tsconfig-paths/register\" npm run typeorm migration:revert",
    "migration:run": "NODE_OPTIONS=\"-r tsconfig-paths/register\" npm run typeorm migration:run",
    "migration:show": "npm run typeorm migration:show",
    "nyc:e2e": "npx nyc merge coverage/coverage-e2e coverage/coverage-e2e.json",
    "nyc:merge": "npx nyc report --reporter=html --report-dir=coverage/combined-report --temp-directory=coverage",
    "nyc:unit": "npx nyc merge coverage/coverage-unit coverage/coverage-unit.json",
    "plugin:init": "cd src/plugins/ && sh bin/init",
    "prebuild": "rimraf dist",
    "script:loadOrganismes": "node dist/src/shared/scripts/loadOrganismes.js",
    "sdev": "run-s dev:*",
    "sdev-stop": "run-s dev:docker:stop",
    "start": "nest start --entryFile src/apps/api/main.js",
    "start:prod": "typeorm-ts-node-commonjs migration:run -d dist/database/data-source.typeorm.js; node dist/src/apps/api/main",
    "start:worker-file:prod": "node dist/src/apps/worker-file/main",
    "start:worker-sync:prod": "node dist/src/apps/worker-sync/main",
    "stop": "docker compose stop -d",
    "test": "run-s test:echo test:unit test:e2e",
    "test:echo": "echo 'Start test'",
    "test:coverage": "run-s test:unit:coverage test:e2e:coverage nyc:unit nyc:e2e nyc:merge ",
    "test:e2e": "test/e2e/launch-e2e-test.sh",
    "test:e2e:coverage": "test/e2e/launch-e2e-test.sh coverage",
    "test:e2e:dev": "test/e2e/launch-e2e-test.sh dev",
    "test:e2e:one": "NODE_ENV='test-e2e' dotenv -e ./test/.env.test jest -- --config ./test/e2e/jest-e2e.json",
    "test:unit": "test/unit/launch-unit-test.sh",
    "test:unit:coverage": "test/unit/launch-unit-test.sh coverage",
    "test:unit:dev": "test/unit/launch-unit-test.sh dev",
    "test:unit:one": "NODE_ENV='test-unit' dotenv -e ./test/.env.test jest -- --config ./test/unit/jest-unit.json",
    "typeorm": "typeorm-ts-node-commonjs -d ./database/data-source.typeorm.ts",
    "vite": "vite"
  },
  "dependencies": {
    "@biblio-num/shared": "workspace:^",
    "@dnum-mi/ds-api-client": "^1.7.12",
    "@nestjs-modules/mailer": "^1.11.2",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/bull": "^10.1.1",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.0",
    "aws-sdk": "^2.1478.0",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "colors": "^1.4.0",
    "cron": "^2.4.4",
    "date-fns": "3.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "ejs": "^3.1.9",
    "express-session": "^1.17.3",
    "ioredis": "5.4.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nestjs-cls": "4.3.0",
    "nodemailer": "^6.9.13",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.94",
    "@types/bcrypt": "^5.0.1",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.9",
    "@types/jest": "^29.5.6",
    "@types/multer": "^1.4.9",
    "@types/node": "^18.18.6",
    "@types/nodemailer": "^6.4.13",
    "@types/passport-local": "^1.0.37",
    "@types/superagent": "^4.1.20",
    "@types/supertest": "^2.0.15",
    "@types/xlsx": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "mock-aws-s3": "^4.0.2",
    "mockdate": "^3.0.5",
    "nock": "^13.3.6",
    "npm-run-all": "^4.1.5",
    "nyc": "15.1.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm-fixtures-cli": "^3.1.0",
    "typescript": "~5.1.6",
    "vite-plugin-node": "^3.1.0",
    "vitest": "^0.34.6"
  },
  "volta": {
    "node": "20.11.0"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
